.template--single-publications {
    margin-top 120px

    +maxwidth($xl-max) {
        margin-top 50px
    }

    .publication__header__wrapper {
        display flex
        flex-direction column
    }

    .section__publication__header {
        margin-bottom 56px

        +maxwidth($xl-max) {
            margin-bottom 32px
        }

        .publication__header__informations {
            margin-top 100px
            display flex
            align-items center
            gap 24px

            +maxwidth($xl-max) {
                margin-top 50px
            }

            +maxwidth($md-max) {
                justify-content center
            }

            .badge {
                color $white
                leading-trim both
                text-edge cap
                font-size 12px
                font-style normal
                font-weight 600
                line-height 16px
                background-color $primary-lighter
                padding 12px 30px
                font-family $paragraph
                display block
                width fit-content
                border-radius 4px
                text-transform uppercase

                +maxwidth($sm-max) {
                    padding 8px
                }
            }

            .date_reading-time__wrapper {
                display flex
                gap 8px

                p {
                    +maxwidth($md-max) {
                        font-size 12px
                    }
                }

                > * {
                    color #307FE2
                    cursor default
                }
            }
        }

        .publication__header__title {
            color #101010
            leading-trim both
            text-edge cap
            font-family $paragraph
            font-size 48px
            font-style normal
            font-weight 500
            line-height 64px
            color $primary
            margin-top 52px

            +maxwidth($xl-max) {
                margin-top 40px
                font-size 40px
                line-height 48px
            }
        }

        .publication__header__share {
            display flex
            align-items center
            margin-top auto

            +maxwidth($xl-max) {
                margin 32px 0
            }

            p {
                margin-right 24px

                +maxwidth($xl-max) {
                    font-size 20px
                    line-height 24px
                    font-weight 700
                    color $primary
                }
            }

            .publication__header__share__icon {
                cursor pointer

                &:first-of-type {
                    margin-right 16px

                    +maxwidth($xl-max) {
                        margin-left auto
                    }
                }
            }
        }

        .publication__main-image {
            width 100%
            height 560px
            border-radius 32px

            +maxwidth($xl-max) {
                height 400px
            }

            +maxwidth($md-max) {
                height 298px
            }
        }

        .publication__main-image__description {
            text-align center
            color #101010
            leading-trim both
            text-edge cap
            font-size 12px
            font-style normal
            font-weight 500
            line-height 16px
            margin-top 17px
        }

        .publication__excerpt {
            text-align left
            margin-top 48px
            color #101010
            font-size 24px
            font-style normal
            font-weight 500
            line-height 32px
            max-width 868px

            +maxwidth($xl-max) {
                margin-top 32px
            }
        }
    }

    .section__publication__content {
        .publication__content__wrapper {
            padding-bottom 85px

            > *:not(:last-child) {
                margin-bottom 56px

                +maxwidth($xl-max) {
                    margin-bottom 32px
                }
            }

            a {
                color #00D8EC

                &:visited {
                    color #00D8EC
                }
            }

            ul, li {
                font-family $paragraph
                color $black
                leading-trim both
                text-edge cap
                font-size 16px
                font-style normal
                font-weight 400
                line-height 24px
            }

            li:not(:last-child) {
                margin-bottom 20px
            }

            blockquote {
                display flex
                gap 40px
                margin-left 0
                margin-right 0

                &:before {
                    content url('../img/svg/icon-blockquote.svg')
                }

                &:after {
                    content url('../img/svg/icon-blockquote.svg')
                    transform rotate(180deg)

                    +maxwidth($md-max) {
                        display none
                    }
                }
            }

            img {
                width 100%
                height 560px
                border-radius 16px

                +maxwidth($xl-max) {
                    height 400px
                    width 100%
                }

                +maxwidth($md-max) {
                    height 200px
                }
            }
        }

        .divider {
            width 100%
            height 2px
            background-color $grey

            +maxwidth($xl-max) {
                width calc(100% - 48px)
                margin 0 auto
            }

            +maxwidth($md-max) {
                width calc(100% - 32px)
            }
        }
    }

    .section__other-publications {
        margin-bottom 120px

        +maxwidth($xl-max) {
            margin-bottom 80px
        }

        .other-publications-slider {
            .slick-slide {
                margin 0 12px
            }

            .slick-list {
                margin 0 -12px
            }
        }

        .other-publications__title {
            color $primary
            text-align center
            margin 80px 0

            +maxwidth($xl-max) {
                margin 32px 0
            }
        }
    }
}