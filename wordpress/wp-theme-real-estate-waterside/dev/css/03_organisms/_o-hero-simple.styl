.section__simple-hero {
    position relative
    width 100%
    height 1044px

    +maxwidth($xl-max) {
        height 940px
    }

    +maxwidth($md-max) {
        height 767px
    }

    .simple-hero__background {
        position absolute
        width 100%
        height 100%
        z-index -2
    }

    &.section__simple-hero--overlay {
        &:before {
            content ''
            display block
            position absolute
            width 100%
            height 100%
            z-index -1
            background linear-gradient(0, rgba(0, 0, 0, .3) 0, rgba(0, 0, 0, .3) 100%)
        }
    }

    .simple-hero__content {
        white-space pre-wrap
        word-wrap break-word

        >* {
            color $white
            margin 0
            padding 0
        }
    }
}

head + body.page-template-default .section__simple-hero, head + body.page-template-template-benefits .section__simple-hero {
    margin-top -195px
    z-index -1
}