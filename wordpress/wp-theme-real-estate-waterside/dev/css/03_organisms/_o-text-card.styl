.section__text-card {
    padding 40px 0
    background-color $primary

    +maxwidth($lg-max) {
        padding 80px 0
    }

    .text-card__wrapper {
        display flex
        gap 30px
        justify-content center

        +maxwidth($xxl-max) {
            flex-wrap wrap
            gap 12px
        }

        +maxwidth($lg-max) {
            gap 16px
        }
    }
}