.simple-map {
    height 897px
    width 100%
    margin-bottom 40px
    border-radius 24px 0 0 24px

    +maxwidth($xl-max) {
        height 670px
        margin 80px 0
        width calc(100vw - 32px)
        border-radius 0
    }

    .leaflet-top.leaflet-left {
        top unset
        left unset
        right 30px !important
        bottom 32px !important
        z-index 9999999
    }

    .leaflet-bottom.leaflet-right {
        display none !important
    }

    .leaflet-bar {
        border 0
    }

    .leaflet-bar a {
        background-color $primary
        color $white
        text-align center
        border-radius 71px !important

        &:last-child {
            margin-top 16px
        }
    }
}