.section__contacts {
    padding 65px 0 105px
    margin-bottom 22px
    background-image url('../img/svg/decor-wave-white.svg')
    background-size cover
    background-repeat no-repeat
    background-position top center

    +maxwidth($xl-max) {
        padding 80px 0 58px
    }

    .contacts__main-title {
        text-align center
        color $primary
        margin 0

        +maxwidth(1599px) {
            margin-bottom 24px
        }
    }

    .contacts__subtitle {
        color $primary
        font-family $paragraph
        font-size 48px
        font-style normal
        font-weight 500
        line-height 56px
        text-transform uppercase

        +maxwidth($xl-max) {
            font-size 40px
            line-height 48px
        }
    }

    .contacts__text-block__text {
        margin 40px 0

        +maxwidth($xl-max) {
            margin 24px 0
        }
    }

    .contacts__subtitle__responsive-padding {
        +maxwidth($xl-max) {
            margin-top 52px
        }
    }
}