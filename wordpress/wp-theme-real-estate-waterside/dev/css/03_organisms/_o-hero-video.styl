.section__hero {
    z-index -1
    position relative

    .hero__video {
        width 100%
        height 100%

        +maxwidth($xl-max) {
            height 512px
        }
    }
}

.section__hero--video {
    height calc(100vh - 150px)

    +maxwidth($xl-max) {
        height 512px
    }

    &:after {
        content ''
        display block
        position absolute
        width 100%
        height 100%
        background linear-gradient(0, rgba(48, 127, 226, .2) 0, rgba(48, 127, 226, .2) 100%), linear-gradient(0, rgba(255, 255, 255, .3) 0, rgba(255, 255, 255, .3) 100%)
        background-blend-mode multiply, normal
        top 0
        bottom 0
    }
}

.home .section__hero {
    margin-top -195px

    +maxwidth($xl-max) {
        margin-top -81px
    }
}