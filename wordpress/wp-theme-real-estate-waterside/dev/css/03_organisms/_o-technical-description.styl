.section__technical-description {
    padding 80px 0
    position relative

    +maxwidth($md-max){
        padding 40px 0
    }

    h1, h2, h3, h4, h5, h6 {
        margin 0 0 80px

        +maxwidth($xl-max) {
            margin 0 0 40px
        }

        +maxwidth($md-max) {
            white-space pre-line
            width 180px
        }
    }

    p {
        font-size 24px
        font-style normal
        font-weight 500
        line-height 32px
    }

    > * {
        color $primary
    }

    .technical_description__download-pdf {
        margin-top 29px
        display block
        font-family $paragraph
        color $primary
        font-size 24px
        font-style normal
        font-weight 600
        line-height 32px
        text-decoration underline
        display flex

        &:after {
            content ''
            display block
            width 32px
            height 32px
            background-image url('../img/svg/icon-pdf.svg')
            margin-left 14px
        }
    }

    .energy-efficience {
        width 573px
        height 573px
        object-fit contain
        object-position center
        margin-top -100px

        +maxwidth(1699px) {
            width 450px
            height 450px
            margin-left -50px
        }

        +maxwidth($xl-max) {
            margin-top 0
            margin-left 0
            position absolute
            top -48px
            right 24px
            width 240px
            height 240px
        }

        +maxwidth($sm-max) {
            width 157px
            height 157px
            top 95px
            right -24px
        }

        +maxwidth($xs-max) {
            width 135px
            height 135px
        }
    }
}