.apartment-list-card {
    .apartment-list-card__image {
        width 150px
        height 100px
        margin-right 24px

        +maxwidth($xxl-max) {
            width 90px
        }

        +maxwidth($xl-max) {
            width 100%
            height 165px
        }
    }

    .apartment-list-card__title {
        margin 0
        color #101010
    }

    .apartment-list-card__attributes__wrapper {
        margin-top 8px
        display flex
        gap 56px

        +maxwidth($xl-max) {
            gap 24px
        }

        +maxwidth($md-max){
            gap 12px
            flex-wrap wrap
        }

        .apartment-list-card__attribute {
            color #307FE2
            font-weight 400
            white-space pre
        }
    }

    .apartment-list-card__wishlist {
        position absolute
        right 24px
        top 24px
        cursor pointer
    }
}