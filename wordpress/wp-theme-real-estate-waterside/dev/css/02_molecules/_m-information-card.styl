.section__information-card {
    .information-card {
        box-shadow 0 24px 32px 0 rgba(0, 0, 0, .1)
        border-radius 24px
        background-color $white
        width 422px
        height 288px
        overflow hidden

        +maxwidth(1399px) {
            height 250px
        }

        +maxwidth($xl-max) {
            width 355px
            height auto
        }

        +maxwidth($md-max) {
            width 100%
        }

        .information-card__main-content {
            height 208px
            overflow hidden
            cursor default
            padding 40px 24px

            +maxwidth($xl-max) {
                height auto
                padding 24px 20px 0
            }

            .information-card__icon {
                width 90px
                height 80px
                margin 0 auto 32px
                display block

                +maxwidth($xl-max) {
                    margin 0 0 24px
                    width 63px
                    height 56px
                }
            }

            .information-card__title {
                color $primary
                text-align center
                margin 0 auto
                max-width 310px
                display block
                height 96px

                +between($xl-max, 1399px) {
                    font-size 24px
                    line-height 32px
                }

                +maxwidth($xl-max) {
                    text-align left
                    margin-bottom 20px
                    height auto
                    font-size 32px
                    line-height 40px
                }

                +maxwidth($md-max) {
                    font-size 24px
                    line-height 32px
                    margin 0 0 20px
                }
            }
        }

        .information-card__hover-content {
            background $primary
            padding 24px
            border-radius 24px
            height 240px
            z-index 9999
            position relative
            transform translateY(0)
            transition transform .5s ease-in-out

            +maxwidth($xl-max) {
                background $white
                height auto
                padding 0 24px 24px
            }

            &.is-visible {
                transform translateY(-100%)
            }

            .information-card__hover-content__text {
                color $grey
                font-size 14px
                font-style normal
                font-weight 400
                line-height 20px

                +maxwidth($xl-max) {
                    color $primary
                }
            }

            .btn--secondary {
                padding 16px 40px
                margin-top 24px

                +maxwidth($xl-max) {
                    display none
                }
            }
        }
    }
}