.section__highlighted-publication {
    +maxwidth($xl-max) {
        display none
    }

    .highlighted-publication__card__text {
        padding 40px
        border-radius 16px 0 0 16px
        background #F9F9F9
        width 50%
        display flex
        flex-direction column
        gap 24px

        .publication__header__informations {
            display flex
            align-items center
            gap 24px

            .badge {
                color $white
                leading-trim both
                text-edge cap
                font-size 12px
                font-style normal
                font-weight 600
                line-height 16px
                background-color $primary-lighter
                padding 12px 30px
                font-family $paragraph
                display block
                width fit-content
                border-radius 4px
                text-transform uppercase
            }

            .date_reading-time__wrapper {
                display flex
                gap 8px

                > * {
                    color #307FE2
                    cursor default
                }
            }
        }

        .publication__header__title {
            color #101010
            font-size 32px
            font-style normal
            font-weight 500
            line-height 48px
            font-family $paragraph
        }

        .publication__header__excerpt {
            color #101010
            font-size 16px
            font-style normal
            font-weight 400
            line-height 24px
        }
    }

    .highlighted-publication__card__image {
        width 50%

        img {
            width 100%
            height 100%
            border-radius 0 16px 16px 0
        }
    }
}