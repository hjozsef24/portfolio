.feature-card__wrapper {
    display flex
    justify-content center
    flex-wrap wrap
    gap 24px

    .feature-card {
        border-radius 24px
        background $white
        box-shadow 0 24px 32px 0 rgba(0, 0, 0, .1)
        padding 40px 32px
        width 290px

        +maxwidth($md-max){
            width calc(100% - 96px)
        }

        &.is-basic.is-hidden{
            display none
        }
    }

    .feature-card__image {
        width 56px
        height 56px
        margin-bottom 24px
    }

    .feature-card__title {
        font-size 24px
        font-style normal
        font-weight 500
        line-height 32px
        color #101010
    }

    .feature-card__text {
        font-weight 400
    }
}