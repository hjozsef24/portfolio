.section__counter {
    .counter-card {
        display flex
        gap 40px
        position relative
        margin 0 56px

        &:nth-child(1), &:nth-child(4n) {
            &:before {
                +minwidth($xl-min) {
                    display none
                }

                +maxwidth($md-max) {
                    display none
                }

                content ''
                display block
                width 2px
                height 100%
                background-color $grey
                position absolute
                left calc(100% - 24px)
            }
        }

        &:not(:last-of-type) {
            +maxwidth($md-max) {
                &:after {
                    content ''
                    display block
                    width 100%
                    height 1px
                    background-color $grey
                    margin -16px 0 24px 
                }
            }
        }

        +maxwidth($xl-max) {
            margin 0
            width 50%
        }

        +maxwidth($md-max) {
            width 100%
            flex-wrap wrap
        }

        .counter-card__icon {
            width 100px
            height 100px

            +maxwidth(1499px) {
                width 75px
                height 75px
            }

            +maxwidth($xl-max) {
                width 60px
                height 80px
            }
        }

        .counter-card__title, .counter-card__text {
            color $primary
            width 146px

            +maxwidth(1499px) {
                width 85px
            }

            +maxwidth($xl-max) {
                width 100%
            }
        }

        .counter-card__title {
            +maxwidth($xl-max) {
                font-size 40px
                line-height 48px
            }
        }

        .counter-card__divider {
            position absolute
            top 0
            right -56px
            width 2px
            height 100%
            background-color $grey

            +maxwidth($xl-max) {
                display none
            }

            +maxwidth($md-max) {
                display none
            }
        }
    }

    .counter-card__divider__horizontal {
        display block
        width 100%
        height 1px
        background-color $grey
        margin 48px 0

        +minwidth($xl-min) {
            display none
        }

        +maxwidth($md-max) {
            display none
        }
    }
}