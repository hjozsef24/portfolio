.team-card {
    width 50%
    position relative

    +maxwidth($md-max) {
        width 100%
    }

    .team-card__image {
        border-radius 24px
        width 200px
        height 200px
        margin 0 auto 32px
        display block
    }

    .team-card__name {
        text-align center
        margin-bottom 12px
        font-size 24px
        font-style normal
        font-weight 700
        line-height 32px
        color $primary
    }

    .team-card__title {
        text-align center
        margin-bottom 12px
        color $primary
        font-size 16px
        font-style normal
        font-weight 400
        line-height 24px
    }

    .team-card__email {
        text-align center
        font-size 16px
        font-style normal
        font-weight 400
        line-height 24px
        color #307FE2
        display block
    }

    .team-card__divider__side {
        position absolute
        display block
        top 0
        right 0
        width 2px
        height 100%
        background-color $grey

        +maxwidth($xl-max) {
            display none
        }
    }
}

.team-card__divider__bottom {
    display block
    width 100%
    height 2px
    background-color $grey
    margin 80px auto

    +maxwidth($xl-max) {
        margin 24px auto
        height 1px
        width 100%
    }
}