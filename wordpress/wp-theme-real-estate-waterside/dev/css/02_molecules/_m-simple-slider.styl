.section__simple-slider {
    .simple-slider {
        .slick-slide {
            margin 0 12px
        }

        .slick-list {
            margin 0 -12px
        }

        .simple-slider__image {
            width 728px
            height 776px

            +maxwidth($xl-max) {
                width 440px
                height 440px
            }

            +maxwidth($md-max) {
                height 360px
            }
        }
    }

    .simple-slider__naviagtion {
        display flex
        justify-content center
        align-items center
        gap 24px
        margin-top 24px

        .slick-dots {
            display flex
            justify-content center
            gap 16px
            padding 0

            li {
                list-style none

                &.slick-active {
                    button {
                        opacity 1
                        background-color $primary
                    }
                }

                button {
                    padding 0
                    font-size 0
                    width 8px
                    height 8px
                    border-radius 100%
                    background-color transparent
                    border 1px solid $primary
                }
            }
        }
    }
}