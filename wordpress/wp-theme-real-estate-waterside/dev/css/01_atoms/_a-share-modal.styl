.share-modal__wrapper {
    position absolute
    bottom 12px
    left 76px
    width 100%
    background rgba(255, 255, 255, .3)
    backdrop-filter blur(12px)
    border-radius 32px
    padding 24px
    width calc(272px - 48px)
    z-index 999
    display none

    &.is-active {
        display block
    }

    a, p {
        color $primary
        leading-trim both
        text-edge cap
        font-family $paragraph
        font-size 12px
        font-style normal
        font-weight 500
        line-height 24px
        text-transform uppercase
        cursor pointer
    }

    .share-modal__wrapper--divider {
        background-color #fff
        margin 18px 0
        width 100%
        height 2px
    }
}