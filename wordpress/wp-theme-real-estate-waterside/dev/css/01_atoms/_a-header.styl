.hamburger {
    background-color $white
    border-radius 100px
    box-shadow 0 16px 64px 0 rgba(0, 71, 221, .12)
    backdrop-filter blur(12px)
    width 48px
    height 48px
    display flex
    gap 3px
    flex-direction column
    justify-content center
    align-items center

    &.is-active {
        .hamburger--inner {
            &:nth-child(1) {
                transform translateY(5px) rotate(45deg)
            }

            &:nth-child(2) {
                transform rotate(-45deg)
            }

            &:nth-child(3) {
                opacity 0
            }
        }
    }

    .hamburger--inner {
        width 16px
        height 2px
        display block
        background-color $primary
        transition all .3s ease-in-out
    }
}