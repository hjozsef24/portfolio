.menu-fejlec-menu-container {
    display block
    margin auto 0

    +maxwidth(1199px) {
        display none
    }

    .header-menu {
        display flex
        gap 32px

        .menu-item {
            position relative

            .nav-link {
                font-family $open-sans
                font-style normal
                font-weight 700
                font-size 16px
                line-height 24px
                color $white
                text-decoration none
                position relative

                &:after {
                    content ''
                    position absolute
                    width 100%
                    height 2px
                    bottom -4px
                    left 0
                    background $white
                    visibility hidden
                    transform scaleX(0)
                    transition .25s linear
                }

                &:hover {
                    &:after {
                        visibility visible
                        transform scaleX(1)
                    }
                }

                &.active {
                    &:after {
                        visibility visible
                        transform scaleX(1)
                    }
                }
            }
        }

        .dropdown-menu.dropdown-menu {
            position absolute
            top 53px
            z-index 9999
            background-color $white
            border-radius 0 0 8px 8px
            padding 16px 0
            width max-content
            max-height 0
            opacity 0
            visibility hidden
            transition visibility .3s ease-in-out

            +maxwidth($xl-max) {
                position relative
                top unset
                display none
            }

            &.active {
                max-height max-content
                opacity 1
                visibility visible
                display block
            }

            .dropdown-item {
                display block
                color $black
                font-weight 400
                font-size 16px
                line-height 1
                padding 8px 16px
                transition background-color .3s ease-in-out

                &:hover {
                    background-color $dropdown-menu-hover
                }

                +maxwidth($xl-max) {
                    font-weight 400
                    font-size 18px
                    line-height 24px
                    color $red
                }
            }
        }

        .menu-item-has-children {
            display flex
            align-items center
            position relative
            max-width fit-content

            +maxwidth($xl-max) {
                display block
            }

            &:after {
                content ''
                background-image url('../img/svg/arrow-open-close-white.svg')
                display inline-block
                width 16px
                height 16px
                background-repeat no-repeat
                background-size contain
                cursor pointer
                transform rotate(90deg)
                margin-left 12px
                transition transform .3s ease-in-out

                +maxwidth($xl-max) {
                    background-image url('../img/svg/arrow-red.svg')
                    transform rotate(180deg)
                    margin-left 8px
                    position absolute
                    top 10px
                    right -25px
                }
            }

            &.is-toggled {
                &:after {
                    transform rotate(270deg)

                    +maxwidth($xl-max) {
                        transform rotate(0)
                    }
                }
            }
        }
    }
}