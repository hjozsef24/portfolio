.video__wrapper {
    .youtube-player {
        height 0
        padding-bottom 56.8%

        .play {
            height 100px
            width 100px
            top 50%
            left 50%
            transform translate(-50%, -50%)
            position absolute
            background url('../../assets/img/playbtn.png') no-repeat
            background-size contain
            cursor pointer

            +maxwidth($md-max) {
                width 50px
                height 50px
            }
        }

        img {
            width 100%
        }

        iframe {
            position absolute
            top 0
            left 0
            width 100%
            height 100%
        }
    }
}