.program-card {
    position relative

    +maxwidth($xxl-max) {
        margin-top 24px
    }

    .text-block {
        padding 24px 16px
        border-bottom-left-radius 16px
        border-bottom-right-radius 16px
        background-color $white
        margin-top -5px
        display flex
        flex-direction column

        +maxwidth($md-max) {
            padding 16px
        }

        .program-info {
            display flex
            justify-content space-between

            +maxwidth($md-max) {
                margin 8px 0
            }
        }

        .program-excerpt {
            font-family $open-sans
            color $purple
            font-size 16px
            line-height 24px
        }
    }

    &--image__wrapper {
        overflow hidden
        height 250px
        border-top-left-radius 16px
        border-top-right-radius 16px

        +maxwidth($lg-max) {
            height 210px
        }

        img {
            width 100%
            height 100%
            object-fit cover
            object-position center
            transition all .3s ease-in-out
        }

        &:hover {
            img {
                transform scale(1.1)
            }
        }
    }

    &--place__wrapper {
        display flex
        flex-flow wrap
        margin-bottom 4px

        &:first-of-type {
            justify-content flex-start
        }

        &:last-of-type {
            justify-content flex-end
        }

        p {
            font-family $open-sans
            font-style normal
            font-weight 700
            font-size 14px
            line-height 20px
            color $text-blue
            margin-top 2px
            margin-left 10px

            +maxwidth($xl-max) {
                margin-top 0
                line-height 14px
            }
        }

        img {
            +maxwidth($xxl-max) {
                width 14px
                height 14px
            }
        }
    }

    .go-to-program {
        font-family $open-sans
        display flex
        justify-content flex-end
        text-align right
        font-weight 700
        font-size 16px
        line-height 24px
        color $text-blue
        margin-top 16px

        +maxwidth($md-max) {
            margin-top 8px
        }

        &__wrapper {
            margin-top auto
        }

        &:after {
            content url('../img/svg/arrow-right-purple.svg')
            margin-left 4px
            transition all .3s ease-in-out
        }

        &:hover {
            &:after {
                transform translateX(4px)
            }
        }
    }

    .program_taxonomies {
        position absolute
        top 12px
        z-index 9

        +maxwidth($xl-max) {
            display flex
            flex-wrap wrap
            max-width 85%
            gap 8px
        }
    }

    .program_taxonomy__wrapper {
        background-color $white
        border-radius 16px
        padding 7px 16px 7px 10px
        margin-left 12px
        margin-top 8px
        display flex
        cursor default

        +maxwidth($xl-max) {
            margin-top 0
        }

        img {
            width 21px
            height 19px
        }

        p {
            font-family $open-sans
            font-style normal
            font-weight 400
            font-size 14px
            line-height 20px
            color $text-blue
            margin-left 10px
        }
    }

    .toggle-favourite-program {
        position absolute
        top 12px
        right 12px
        cursor pointer
        z-index 9
    }

    &--post-info {
        display flex

        p {
            color $purple
            font-family $open-sans
            font-weight 700
            font-size 14px
            line-height 20px

            &:first-of-type {
                display flex

                &:after {
                    content ''
                    display block
                    margin auto 8px
                    width 4px
                    height 4px
                    border-radius 4px
                    background-color $purple
                }
            }
        }
    }

    h4 {
        +maxwidth($xl-max) {
            font-size 24px
            line-height 32px
        }
    }
}