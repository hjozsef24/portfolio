.contact-modal {
    h3 {
        text-align center
        margin-bottom 24px

        +maxwidth($md-max) {
            font-size 32px
            line-height 40px
        }
    }

    p {
        text-align center
        font-family $open-sans
        color $purple
        font-style normal
        font-weight 400
        font-size 18px
        line-height 24px

        +maxwidth($md-max) {
            font-size 16px
            line-height 24px
        }
    }
}