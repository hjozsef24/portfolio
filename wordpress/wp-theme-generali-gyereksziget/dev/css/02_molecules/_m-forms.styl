.form-row {
    display flex
    justify-content space-between
    margin-bottom 16px

    +maxwidth($sm-max) {
        display block
        margin-bottom 0
    }

    .form-group {
        width 50%

        +maxwidth($sm-max) {
            width 100%
            margin-bottom 16px
        }

        &:first-of-type {
            margin-right 16px

            +maxwidth($sm-max) {
                margin-right 0
            }
        }
    }
}

.form-group {
    label {
        display block
        font-family $open-sans
        color $white
        font-style normal
        font-weight 400
        font-size 16px
        line-height 24px
        margin-bottom 8px
    }

    input[type='text'], input[type='email'], input[type='search'], select, textarea {
        background-color $white
        width 100%
        border-radius 30px
        padding 12px 40px 12px 16px
        border 2px solid $light-grey
        font-style normal
        font-weight 400
        font-size 16px
        line-height 24px
        font-family $open-sans
        color $grey
        transition all .2s ease-in-out

        &:focus {
            outline none
        }
    }

    textarea {
        height 168px
        resize none
    }

    select {
        appearance none
        background-image url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e") // www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat no-repeat
        background-position right 1rem center
        background-size 1em
    }

    .error-message {
        display none
        margin 0 auto
        padding 2px 16px 6px
        color $white
        font-weight 400
        font-size 12px
        line-height 16px
        font-family $open-sans
        background-color $red
        border-radius 0 0 16px 16px
        width calc(100% - 48px)
    }

    &.has-error {
        input, textarea, select, label:hover:before, [type='checkbox']:not(:checked) + label:before, [type='checkbox']:checked + label:before {
            border 2px solid $red !important
        }

        textarea + .error-message {
            margin-top -3px
        }

        .error-message {
            display block
        }

        &.checkbox__wrapper.checkbox__wrapper {
            margin-top 32px

            label span, label a {
                color $red !important
            }
        }
    }

    &.checkbox__wrapper {
        display flex
        margin-top 16px
    }
}

// Custom checkbox
[type='checkbox']:not(:checked), [type='checkbox']:checked {
    position absolute
    left -9999px
}

[type='checkbox']:not(:checked) + label, [type='checkbox']:checked + label {
    position relative
    padding-left 25px
    cursor pointer
    display inline-block
    font-family $open-sans
    color $white
    font-weight 400
    font-size 14px
    line-height 20px
    user-select none
    margin-bottom 0

    a {
        color $white
        text-decoration none
    }

    p {
        margin-bottom 0
        font-weight 400
        font-size 14px
        line-height 20px
    }
}

/* checkbox aspect */
[type='checkbox']:not(:checked) + label:before, [type='checkbox']:checked + label:before {
    content ''
    position absolute
    left 0
    top 2px
    width 16px
    height 16px
    border 2px solid $yellow-main
    background transparent
    border-radius 4px
}

/* checked mark aspect */
[type='checkbox']:not(:checked) + label:after, [type='checkbox']:checked + label:after {
    content ''
    position absolute
    top 4px
    left 5px
    font-size 1.4em
    line-height .8
    color $white
    transition all .2s
    transform rotate(45deg)
    height 10px
    width 6px
    border-bottom 2px solid $black
    border-right 2px solid $black
    border-radius 0
}

/* checked mark aspect changes */
[type='checkbox']:not(:checked) + label:after {
    opacity 0
    transform scale(0) rotate(45deg)
}

[type='checkbox']:checked + label:after {
    opacity 1
    transform scale(1) rotate(45deg)
}

/* accessibility */
[type='checkbox']:checked:focus + label:before, [type='checkbox']:not(:checked):focus + label:before {
    border 2px solid $yellow-main
}

[type='checkbox']:checked:focus + label:before, [type='checkbox']:checked + label:before {
    background-color $yellow-main
}

/* hover style just for information */
label:hover:before {
    border 2px solid $yellow-main !important
}