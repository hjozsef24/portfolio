.text-block-section {
    ol {
        list-style auto
        list-style-position inside
    }

    ul {
        list-style disc
        list-style-position inside
    }

    li {
        font-weight 400
        line-height 32px
        font-weight 400
        font-size 16px
        line-height 32px
        font-family $open-sans
    }

    p {
        color $purple
        font-family $open-sans
        font-weight 400
        line-height 24px
    }

    img {
        position absolute
        width 340px
        height 271px
        left 20%
        z-index -1
    }

    .quote_wrapper {
        padding 32px 0

        +maxwidth($sm-max) {
            padding 16px 0
        }
    }

    +maxwidth($md-max) {
        h2 {
            line-height 48px
            font-size 40px
        }

        p {
            font-size 16px
            line-height 24px
            margin-top 8px
        }

        .btn {
            margin-top 32px
        }
    }
}
