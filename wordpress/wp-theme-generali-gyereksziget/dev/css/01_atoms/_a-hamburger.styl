.hamburger {
    border-radius 24px 0 24px 24px
    z-index 9999
    display block
    margin auto 0

    +minwidth(1200px) {
        display none
    }

    &.is-active {
        .hamburger--inner {
            &:nth-child(1) {
                transform translateY(7px) rotate(45deg)
            }

            &:nth-child(2) {
                transform rotate(-45deg)
            }

            &:nth-child(3) {
                opacity 0
            }
        }
    }

    &--inner {
        width 24px
        height 3px
        border-radius 5px
        background-color $white
        display block
        margin 0 auto
        transition all .3s ease-in-out

        &:nth-child(2) {
            margin 4px auto
        }
    }
}