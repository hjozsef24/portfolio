    margin-bottom 0

    a {
        font-weight 700
        font-size 14px
        line-height 24px
        color $text-blue
        font-family $open-sans
        display flex

        &:after {
            content ''
            background-image url('../img/svg/download.svg')
            width 24px
            height 24px
            display block
            margin-left 10px
        }
    }
}