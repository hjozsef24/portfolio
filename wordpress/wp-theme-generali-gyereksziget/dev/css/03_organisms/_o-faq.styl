.faq {
    background-image url('../img/blue-purple-gradient-background.png')
    background-position center
    background-size cover
    position relative
    margin-top -70px
    padding-top 100px
    padding-bottom 150px

    .custom-container-spacing {
        +maxwidth($lg-max) {
            --bs-gutter-x 16px
        }
    }

    h2 {
        +maxwidth($lg-max) {
            font-weight 400
            font-size 32px
            line-height 40px
        }
    }

    .cta {
        margin-bottom -95px
    }
}
