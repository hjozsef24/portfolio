.map {
    &--secondary-filter {
        position absolute
        top 32px
        background $white
        left 50%
        transform translateX(-50%)
        box-shadow 0 12px 24px rgba(0, 0, 0, .1)
        border-radius 24px
        padding 32px

        +maxwidth(1799px) {
            left 37%
            transform translateX(0)
        }

        +maxwidth(1199px) {
            position relative
            top 0
            left unset
            border-radius 0
            padding 32px 20px 0
            transform translateX(0)
            background-color $map-secondary-filter-tablet-background
        }
    }
}