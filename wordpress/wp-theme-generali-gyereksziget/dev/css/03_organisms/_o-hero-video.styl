.hero-slider-video {
    position relative
    height 65vh
    margin-bottom 75px

    +maxwidth($lg-max) {
        height 85vh
        margin-bottom 25px
    }

    & + .highlighted-programs {
        margin-top 25px

        +maxwidth($md-max) {
            margin-top -200px
        }

        +maxwidth($sm-max) {
            margin-top -95px
        }
    }

    h1 {
        +maxwidth($lg-max) {
            font-weight 400
            font-size 40px
            line-height 48px
        }
    }

    .hero-video {
        position absolute
        z-index -1
        object-fit cover
        width 100%
        height 100%
        top 50%
        left 50%
        transform translate(-50%, -50%)
    }
}
