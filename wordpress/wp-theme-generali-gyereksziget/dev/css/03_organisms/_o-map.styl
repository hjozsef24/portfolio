.map {
    position relative

    +maxwidth(1199px) {
        display flex
        flex-direction column-reverse
    }

    &--map-image {
        display block
        width 100%
        height auto
        min-height 1100px

        +maxwidth(1199px) {
            min-height 850px
        }

        +maxwidth($sm-max) {
            min-height unset
            width 100%
            height 100%
            position absolute
            top 0
            left 0
        }
    }
}