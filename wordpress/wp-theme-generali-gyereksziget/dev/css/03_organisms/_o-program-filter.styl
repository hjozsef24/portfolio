.program-filter--modal__wrapper {
    padding 16px
    position relative
    display flex
    justify-content space-between
    width 100%

    &.is-active {
        transform translateY(0)
    }

    button {
        margin-top 16px
    }

    +maxwidth($md-max) {
        background $light-blue
        border-radius 24px 24px 0 0
        position fixed
        z-index 999
        transform translateY(100%)
        transition transform .3s ease-in-out
        bottom 0
        left 0
        right 0
        overflow-y scroll
        max-height 95vh
        display block
    }

    form {
        margin-bottom 16px

        input {
            border 0 !important
        }
    }
}