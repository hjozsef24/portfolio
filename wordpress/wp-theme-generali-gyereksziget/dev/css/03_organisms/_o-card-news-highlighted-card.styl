.news__highlighted {
    &__wrapper {
        margin-top 16px
        background-color #fff
        display flex
        border-radius 16px
    }

    &__image {
        max-width 45%
        width 676px
        overflow hidden
        border-top-left-radius 16px
        border-bottom-left-radius 16px

        +maxwidth($xl-max) {
            width 50%
            max-width 50%
        }

        img {
            width 100%
            height 100%
            object-fit cover
            object-position center
            transition all .3s ease-in-out
        }

        &:hover {
            img {
                transform scale(1.1)
            }
        }
    }

    &__title {
        padding-top 48px
        padding-bottom 16px

        +maxwidth($xxl-max) {
            font-size 32px
            line-height 1.25
            padding-top 24px
        }
    }

    &__excerpt {
        padding-bottom 32px
        color $purple
        font-family $open-sans
        font-weight 400
        font-size 16px
        line-height 24px
    }

    &__text_wrapper {
        position relative
        padding 0 32px
        width 55%
        display flex
        flex-direction column
        flex 1

        +maxwidth($xl-max) {
            padding 0 16px
        }
    }

    &__date {
        font-weight 700
        font-size 16px
        line-height 24px
        color $purple
        font-family $open-sans
    }

    &__btn {
        font-weight 700
        font-size 16px
        line-height 24px
        color $text-blue
        font-family $open-sans
        margin auto 0 48px
        padding 25px 0

        +maxwidth($lg-max) {
            margin 0 32px 0 auto
        }

        &:after {
            content ''
            width 24px
            height 24px
            position absolute
            background-image url('../img/arrow_right.png')
            transform translateX(7px)
            transition transform .3s ease-in-out
        }

        &:hover {
            &:after {
                transform translateX(11px)
            }
        }
    }
}