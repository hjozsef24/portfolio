.map {
    &--primary-filter {
        width 400px
        height 920px
        background $light-blue
        position absolute
        top 32px
        left 32px
        box-shadow 0 12px 24px rgba(0, 0, 0, .1)
        border-radius 24px
        padding 32px 11px 32px 32px

        +maxwidth(1199px) {
            top 98px
            left -290px
            width 315px
            height 100%
            border-radius 0
            transition all .3s ease-in-out
            padding 16px 11px 16px 16px
        }

        +maxwidth($sm-max) {
            left 0
            right 0
            width 100%
            z-index 9
            border-radius 24px 24px 0 0
            transform translateY(100%)
            transition transform .3s ease-in-out
            opacity 0
            visibility hidden
        }

        &.active {
            left 0

            +maxwidth($sm-max) {
                transform translateY(0)
                visibility visible
                opacity 1
            }
        }
    }
}