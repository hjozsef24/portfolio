.highlighted-news {
    margin-top 90px
    position relative

    &:before {
        content ''
        width 100%
        height 1100px
        background-image url('../img/news-cloud-background.png')
        background-repeat no-repeat
        background-size cover
        position absolute
        bottom 0
        z-index -1
        display block
    }

    &:after {
        content ''
        width 100%
        height 120px
        background-image url('../img/cloud-white-secondary.png')
        background-repeat no-repeat
        background-size cover
        position absolute
        bottom -1px
        z-index 0
        display block
    }

    &--container-background {
        position relative
        padding-top 64px
        padding-bottom 105px
        border-radius 24px 24px 0 0

        &:after {
            content url('../img/decor/news-decor.svg')
            position absolute
            top -65px
            right 320px

            +maxwidth($xl-max) {
                right 0
                top -85px
            }
        }

        &:before {
            content ''
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            width 100%
            height 100%
            background-image url('../img/blue-purple-gradient-background.png')
            background-size cover
            border-bottom-left-radius 24px
            border-bottom-right-radius 24px
            transform rotate(180deg)
            z-index -1
        }
    }
}