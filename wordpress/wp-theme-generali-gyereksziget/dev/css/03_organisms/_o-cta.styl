.cta {
    margin-top 64px
    background-color $dark-blue
    border-radius 24px
    padding 40px 32px 80px
    position relative

    +maxwidth($sm-max) {
        padding 32px 24px 45px 24px 
    }

    >* {
        margin-bottom 16px

        &:last-child {
            margin-bottom 0
        }
    }
}