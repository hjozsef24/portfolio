.slick-hider {
    opacity 0
    transition opacity 1s
    visibility hidden

    &.slick-initialized {
        opacity 1
        visibility visible
    }
}

.d-none {
    display none
}

.justify-content-space-between {
    justify-content space-between
}

.justify-lg-content-center {
    +maxwidth($lg-max) {
        justify-content center !important
    }
}

.offset-tablet-2 {
    +between($md-max, $lg-max) {
        margin-left 16.66666667%
    }
}