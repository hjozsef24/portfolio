@font-face {
    font-family 'Luckiest Guy'
    src url('../fonts/LuckiestGuy.ttf') format('truetype')
    font-style normal
    font-display block
}

h1 {
    color $white
    font-family $luckiest
    font-style normal
    font-weight 400
    font-size 64px
    line-height 72px
}

h2 {
    color $text-blue
    font-family $luckiest
    font-style normal
    font-weight 400
    font-size 48px
    line-height 56px
}

h3 {
    color $text-blue
    font-family $luckiest
    font-style normal
    font-weight 400
    font-size 40px
    line-height 48px
}

h4 {
    color $text-blue
    font-family $luckiest
    font-style normal
    font-weight 400
    font-size 32px
    line-height 40px
}

h5 {
    color $text-blue
    font-family $luckiest
    font-style normal
    font-weight 400
    font-size 24px
    line-height 32px
}

h6 {
    color $text-blue
    font-family $luckiest
    font-style normal
    font-weight 400
    font-size 20px
    line-height 24px
}

.text-center {
    text-align center
}

em {
    font-style italic
    font-family $open-sans
    font-weight 300
    font-size 18px
    line-height 24px
    color $black
}

strong {
    font-family $open-sans
    font-weight 700
    font-size 18px
    line-height 24px
}