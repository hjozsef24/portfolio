.filter--shop-the-look {
    .shop-the-look-category {
        font-size: 16px;
        font-family: $headline-bold;
        padding: 16px 24px;
        min-width: 125px;
        text-align: center;
        cursor: pointer;
        text-transform: uppercase;
        transition: all 0.2s ease-in-out;
        align-items: center;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        

        &.is-selected {
            color: $white;
        }

        +maxwidth(1440px) {
            line-height: 1;
        }

        +maxwidth($lg-max) {
            font-size: 14px;
            padding: 10px 16px;
            min-width: fit-content;
        }

        +maxwidth($sm-max) {
            padding: 10px 7px;
            font-size: 12px;
        }
    }

    .shop-the-look-category-pill {
        position: absolute;
        transform: translateY(-50%);
        height: 60px;
        background-color: $primary;
        border-radius: 30px;
        z-index: -1;
        transition: all 0.2s ease-in-out;

        +maxwidth($xxl-max) {
            height: 50px;
        }

        +maxwidth($lg-max) {
            height: 40px;
        }

        +maxwidth($md-max) {
            height: 36px;
        }
    }
}