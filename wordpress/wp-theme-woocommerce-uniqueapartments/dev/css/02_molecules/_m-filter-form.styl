.filter-form {
    margin-bottom: 24px;

    .btn--search {
        margin-top: 18px;

        +maxwidth($md-max) {
            margin-left: auto !important;
            margin-right: auto !important;
        }
    }

    &--group {
        label {
            display: block;
            font-size: 16px;
            line-height: 24px;
            font-family: $paragraph-regular;
            margin-bottom: 2px;
        }

        select[name='project'], select[name='apartment'], select[name='city-region'] {
            width: 240px;

            +maxwidth($xl-max) {
                width: 215px;
            }

            +maxwidth($md-max) {
                width: 100%;
            }
        }

        select[name='completion'], select[name='floor'], select[name='style'] {
            width: 180px;

            +maxwidth($xl-max) {
                width: 150px;
            }

            +maxwidth($md-max) {
                width: 100%;
            }
        }

        .input-group {
            display: flex;
            border: 2px solid $primary;
            align-items: center;
            padding-right: 14px;
            height: 44px;

            &--size {
                width: 160px;

                input[type='text'] {
                    width: 60px !important;
                    padding: 8px 16px !important;

                    +maxwidth($md-max) {
                        width: 50% !important;
                    }
                }

                +maxwidth($md-max) {
                    width: 100%;
                }
            }

            &--bedrooms {
                width: 140px;

                +maxwidth($xl-max) {
                    width: 100px;
                }

                +maxwidth($md-max) {
                    width: 100%;
                }

                input[type='text'] {
                    width: 40px !important;

                    +maxwidth($md-max) {
                        width: 50% !important;
                        padding: 12px 16px;
                    }
                }
            }

            &--price {
                width: 240px;
                position: relative;

                +maxwidth($xl-max) {
                    width: 205px;
                }

                +maxwidth($md-max) {
                    width: 100%;
                }

                input[type='text'] {
                    width: 100px !important;

                    +maxwidth($xl-max) {
                        width: 90px !important;
                        padding: 10px 13px;
                    }

                    +maxwidth($md-max) {
                        width: 50% !important;
                        padding: 12px 16px;
                    }
                }

                .measure {
                    font-size: 22px !important;
                    position: absolute;
                    right: 14px;
                }
            }

            input[type='text'] {
                -moz-appearance: textfield;
                border: 0;
                outline: 0;
                width: 30px;
                padding: 8px 10px;
                font-family: $paragraph-regular;
                font-size: 16px;
                color: $primary;

                +maxwidth($xl-max) {
                    padding: 8px 10px;
                }

                &::-webkit-outer-spin-button, &::-webkit-inner-spin-button {
                    -webkit-appearance: none;
                    margin: 0;
                }

                &::placeholder, &::-webkit-input-placeholder, &:-ms-input-placeholder {
                    color: $secondary-placeholder-color;
                }
            }

            .measure {
                font-size: 14px;
                line-height: 1;
            }
        }
    }

    .reset-filter {
        cursor: pointer;
        text-align: center;

        +maxwidth($xl-max) {
            flex-grow: 1;
            text-align: right;
            margin-top: auto;
        }
    }

    .checkbox__wrapper {
        display: flex;
        gap: 32px;

        +maxwidth($xl-max) {
            align-items: flex-end;
            gap: 20px;
            margin-left: 40px;
        }

        +maxwidth($md-max) {
            margin-left: 0;
        }
    }
}

.filter--results {
    color: $info-text-color;
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 32px;

    +maxwidth($md-max) {
        margin-bottom: 0;
    }

    span {
        margin-right: 4px;
    }
}

.filter--furniture-packages, .filter--developments {
    .btn--search {
        margin-left: auto;
        position: relative;

        +maxwidth($xl-max) {
            margin-left: 0;
            margin-right: auto;
        }
    }

    .reset-filter {
        flex-basis: 100%;
        display: flex;
        justify-content: flex-end;
    }

    .filter--results {
        display: flex;
        margin-top: -48px;
    }
}

.reset-filter {
    +maxwidth($md-max) {
        text-transform: uppercase;
        margin-bottom: 24px;
    }
}

.filter-counter {
    position: absolute;
    top: -10px;
    right: -10px;
    color: $white;
    background-color: $red;
    padding: 4px 11px;
    border-radius: 100px;
    display: none;
}