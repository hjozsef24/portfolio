.gallery {
    img {
        object-fit: cover;
        object-position: center;
    }

    .main-image {
        width: 100%;
        height: 464px;

        +maxwidth($xl-max){
            height 292px;
        }

        +maxwidth($md-max) {
            height: 300px;
        }

        +maxwidth($sm-max) {
            height: 184px;
            margin-bottom: 12px;
        }
    }

    .gallery-image {
        width: 100%;
        height: 230px;

        +maxwidth($xl-max){
            height 146px;
        }

        +maxwidth($md-max) {
            height: 300px;
        }
        
        +maxwidth($sm-max) {
            height: 184px;
            margin-bottom: 12px;
        }
    }
}
