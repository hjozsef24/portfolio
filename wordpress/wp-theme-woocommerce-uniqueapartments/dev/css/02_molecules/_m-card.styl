.main-card {
    .thumbnail {
        width: 100%;
        height: 240px;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    .collection-brand {
        color: $primary;
        font-size: 16px;
        line-height: 24px;
    }

    .location {
        font-size: 16px;
        line-height: 24px;
        color: $primary;
        margin-top: 16px;
        display: flex;
        gap: 10px;
        align-items: center;

        &:before {
            content: url('../img/svg/icon-pin-red.svg');
            width: 24px;
            height: 24px;
        }
    }

    .details {
        color: $primary;
        margin-top: 16px;
        font-size: 16px;
        line-height: 24px;
        font-family: $paragraph-bold;
    }

    .short_description {
        margin-top: 16px;
        font-size: 18px;
        line-height: 24px;
        color: $primary;
        font-family: $paragraph-regular;
    }

    .price, .completion, .dimensions, .material, .collection-brand, .size, .rooms, .project {
        color: $primary;
        font-family: $paragraph-regular;
        font-size: 18px;
        line-height: 24px;
        margin-top: 8px;
    }

    .icon-text {
        display: flex;
        margin-top: 16px;

        &__wrapper {
            display: flex;
            gap: 24px;
        }

        img {
            width: 24px;
            height: 24px;
            object-fit: contain;
            object-position: center;
            margin-right: 4px;
        }

        p {
            color: $primary;
            font-size: 16px;
            line-height: 24px;
        }
    }

    .toggle-wishlist {
        position: absolute;
        right: 16px;
        top: 16px;
    }
}

.tax-product_cat {
    .main-card {
        .price {
            font-size: 24px;
            line-height: 32px;
        }

        .project {
            order: 1;
        }

        h5 {
            order: 2;
        }

        .icon-text__wrapper {
            order: 3;
        }

        .price {
            order: 4;
        }

        .details {
            order: 5;
        }
    }
}