.hamburger {
    border-radius: 24px 0 24px 24px;
    z-index: 9999;
    display: block;
    margin: auto 0;

    +minwidth($xl-min) {
        display: none;
    }

    &.is-active {
        .hamburger--inner {
            &:nth-child(1) {
                transform: translateY(10px) rotate(45deg);
            }

            &:nth-child(2) {
                transform: rotate(-45deg);
            }

            &:nth-child(3) {
                opacity: 0;
            }
        }
    }

    &--inner {
        width: 38px;
        height: 4px;
        border-radius: 5px;
        background-color: $primary;
        display: block;
        margin: 0 auto;
        transition: all 0.3s ease-in-out;

        &:nth-child(2) {
            margin: 6px auto;
        }
    }
}