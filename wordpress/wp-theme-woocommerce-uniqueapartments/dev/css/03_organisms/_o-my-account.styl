section.account {
    margin-bottom: 56px 0;
    min-height: 30vh;

    h2 {
        margin: 56px 0;
    }

    .dashboard_wr {
        margin-bottom: 56px;

        a {
            text-decoration: underline;
            color: $primary;
        }
    }

    .woocommerce-MyAccount-navigation {
        width: 100% !important;
        margin-bottom: 50px;

        ul {
            padding: 0;
            list-style: none;
            display: flex;
            justify-content: flex-start;
            gap: 25px;
            flex-wrap: wrap;

            +maxwidth($xl-max) {
                gap: 16px;
            }

            li {
                font-family: $paragraph-regular;
                margin-bottom: 10px;

                &, a {
                    color: $primary;
                }

                &.is-active {
                    text-decoration: underline;
                }
            }
        }
    }

    .woocommerce-orders-table {
        font-family: $paragraph-regular;
    }

    .woocommerce-Address.woocommerce-Address {
        float: left;
        width: 75%;
        margin-top: 25px;

        &:last-child {
            margin-bottom: 50px;
        }

        address {
            font-family: $paragraph-regular;
            margin-top: 15px;
            font-style: normal;
        }

        a {
            font-family: $paragraph-regular;
        }
    }

    .woocommerce-Button {
        margin: 25px 0;
        display: block;
        border-radius: 100px;
        padding: 16px 24px;
        font-size: 16px;
        line-height: 24px;
        user-select: none;
        border-style: inset;
        border: none;
        width: fit-content;
        font-family: $headline-bold;
        cursor: pointer;
        color: $white !important;
        background-color: $primary !important;
        border: 2px solid $primary !important;
    }
}