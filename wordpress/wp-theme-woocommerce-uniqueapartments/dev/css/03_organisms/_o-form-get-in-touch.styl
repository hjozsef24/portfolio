.get-in-touch-form {
    .input-group:not(.input-group--checkbox) {
        display: block;
        width: 350px;
        display: block;
        margin: 25px auto;

        +maxwidth($xl-max){
            width 100%;
        }

        label {
            display: block;
            font-family: $paragraph-regular;
            margin-bottom: 5px;
        }

        input, textarea {
            width: 100%;
        }

        textarea {
            height: 150px;
            resize: none;
        }

        button {
            margin-left: auto;
            margin-right: 0;
            width: 150px;
        }
    }

    .input-group--checkbox {
        margin-left: 50px;

        label {
            display: flex;
        }
    }
}