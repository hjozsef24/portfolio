.shop-the-look {
    margin-bottom: 10%;

    &-gallery {
        columns: 3;
        column-gap: 32px;

        +maxwidth($xl-max) {
            columns: 2;
            column-gap: 24px;
        }

        +maxwidth($md-max) {
            columns: 1;
            column-gap: 16px;
        }

        .shop-the-look-item {
            position: relative;
            animation: rise 400ms ease-out backwards;
            animation-play-state: paused;
            animation-delay: 300ms;

            .images_wrap img {
                max-height: 850px;
                width: calc(100% - 8px);
                padding-bottom: 32px;
            }

            .btn--shop-the-look {
                position: absolute;
                border: none;

                &.bottom-left {
                    bottom: 48px;
                    left: 16px;
                }

                &.bottom-right {
                    bottom: 48px;
                    right: 16px;
                }

                &.top-left {
                    top: 20px;
                    left: 16px;
                }

                &.top-right {
                    top: 20px;
                    right: 16px;
                }
            }
        }
    }

    .wrap_svl_center_box {
        justify-content: space-evenly;
        width: 100%;
        display: flex;
        gap: 20px;
    }

    .wrap_svl {
        width: 100%;
    }

    @keyframes rise {
        from {
            opacity: 0;
            transform: translateY(10%);
        }
    }
}
