.attribute-icons {
    margin-top: 48px;
    display: flex;
    gap: 35px;
    flex-wrap: wrap;
    justify-content: flex-start;

    +maxwidth($md-max) {
        flex-direction: column;
    }

    &__wrapper {
        display: flex;

        img {
            width: 40px;
            height: 40px;
            object-fit: contain;
            object-position: center;
            margin-right: 10px;
        }

        .attribute-name {
            font-size: 16px;
        }

        .attribute-value {
            font-size: 16px;
            font-family: $paragraph-bold;
        }
    }
}