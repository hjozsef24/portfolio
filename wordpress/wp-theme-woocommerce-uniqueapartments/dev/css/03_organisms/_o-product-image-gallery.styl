.product-thumbnail-gallery {
    +maxwidth($xl-max) {
        width: 700px;
        display: block;
        margin: auto;
    }

    +maxwidth($md-max) {
        width: 100% ;
    }

    &--image__wrapper {
        width: 125px;
        height: 100px;

        +maxwidth(1645px) {
            width: 100px;
            height: 80px;
        }

        +maxwidth(1399px) {
            width: 85px;
            height: 70px;
        }

        +maxwidth($xl-max) {
            width: 125px;
            height: 100px;
        }

        +maxwidth($sm-max) {
            width: 80px;
            height: 64px;
        }

        img {
            width: 125px;
            height: 100px;
            object-fit: cover;
            object-position: center;
            display: block;
            margin: 0 auto;

            +maxwidth(1645px) {
                width: 100px;
                height: 80px;
            }

            +maxwidth(1399px) {
                width: 85px;
                height: 70px;
            }

            +maxwidth($xl-max) {
                width: 125px;
                height: 100px;
            }

            +maxwidth($sm-max) {
                width: 80px;
                height: 64px;
            }
        }
    }
}

.product-image-gallery {
    margin-bottom: 32px;

    +maxwidth($xl-max) {
        margin-bottom: 16px;
    }

    &--image__wrapper {
        width: 755px;
        height: 428px;

        +maxwidth($sm-max) {
            height: 206px;
        }

        img {
            width: 755px;
            height: 428px;
            object-fit: cover;
            object-position: center;
            display: block;
            margin: 0 auto;

            +maxwidth($sm-max) {
                height: 206px;
            }
        }
    }
}