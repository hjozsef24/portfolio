.single--home-for-sale {
    margin: 80px 0 56px 0;

    +maxwidth($md-max) {
        margin: 0;
    }

    .description {
        margin-top: 32px;
    }

    .price {
        display: flex;
        align-items: center;
        gap: 8px;

        +maxwidth($xl-max) {
            margin-top: 32px;
        }
    }

    .btn {
        width: 283px;
        text-align: center;
        margin-top: 24px;
        text-transform: uppercase;
    }

    .attribute-icons {
        +maxwidth($xl-max) {
            margin-top: 24px;
        }
    }

    .mobile-hero {
        height: 304px;
        width: 100%;
        margin-bottom: 32px;
        object-fit: cover;
        object-position: center;
    }
}

.single-homes-for-sale-cpt {
    .gallery {
        +maxwidth($md-max) {
            display: none;
        }
    }
}