.product-template--shop-the-look {
    margin: 56px 0;

    +maxwidth($xl-max) {
        margin-top: 32px;
    }

    +maxwidth($sm-max) {
        margin-top: 16px;
    }

    .woocommerce-product-gallery__image {
        img {
            width: 754px;
            height: 428px;
            object-fit: cover;
            object-position: center;

            +maxwidth($sm-max) {
                height: 206px;
            }
        }
    }

    .container-spacing {
        margin-bottom: 56px;
    }

    .product-title {
        color: $primary;

        +maxwidth($xl-max) {
            margin-top: 32px;
        }
    }

    .product-description {
        font-size: 16px;
        line-height: 24px;
        margin-top: 24px;
    }

    .quantity.quantity {
        display: none !important;
    }

    table.variations {
        +maxwidth($xl-max) {
            width: 100%;
        }

        tbody {
            +maxwidth($xl-max) {
                display: flex;
                justify-content: space-between;
            }

            +maxwidth($md-max) {
                display: block;
            }
        }

        tr {
            display: block;
        }

        th {
            font-family: $paragraph-regular;
            display: block;
            text-align: left;
            margin-top: 24px;

            label {
                font-size: 16px;
                line-height: 24px;
            }
        }
    }

    .price {
        margin-top: 24px;
    }

    .woocommerce-variation-price {
        .price {
            display: block;
            margin: 0 0 12px 0;
            font-size: 18px;
            line-height: 24px;
            font-family: $paragraph-regular;
        }
    }

    .reset_variations {
        display: block;
        margin: 12px 0;
        font-family: $paragraph-regular;
        font-size: 16px;
        line-height: 24px;
        color: $primary;
    }

    .similar-products, .related-products, .individual-products {
        .main-card {
            .price {
                font-size: 24px;
                line-height: 32px;
            }
        }
    }

    .woocommerce-variation.single_variation {
        .price {
            font-family: $headline-black;
            font-size: 32px;
            line-height: 40px;
        }
    }

    .attribute-icons {
        +maxwidth($md-max) {
            flex-direction: column;
            gap: 24px;
            margin-top: 36px;
        }
    }

    .products-in-group-slider, .upsells-product-slider, .similar-product-slider {
        .slick-slide {
            margin-right: 16px;
        }

        .slick-dots {
            display: flex;
            gap: 10px;
            list-style: none;
            position: absolute;
            bottom: -16px;
            justify-content: center;
            padding: 0;

            .slick-active {
                button {
                    opacity: 1;
                }
            }

            button {
                cursor: pointer;
                border: unset;
                background-color: $inactive-dots;
                width: 8px;
                height: 8px;
                border-radius: 8px;
                opacity: 0.5;
                color: transparent;
                font-size: 0;
                padding: 0;
            }
        }
    }
}