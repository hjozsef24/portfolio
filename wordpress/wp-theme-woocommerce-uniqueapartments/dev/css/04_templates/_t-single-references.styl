.references-slider {
    +maxwidth($md-max) {
        margin-bottom: 80px;

        .slick-slide {
            margin-right: 16px;
        }

        .slick-dots {
            display: flex;
            gap: 10px;
            list-style: none;
            position: absolute;
            bottom: -16px;
            justify-content: center;
            padding: 0;

            .slick-active {
                button {
                    opacity: 1;
                }
            }

            button {
                cursor: pointer;
                border: unset;
                background-color: $inactive-dots;
                width: 8px;
                height: 8px;
                border-radius: 8px;
                opacity: 0.5;
                color: transparent;
                font-size: 0;
                padding: 0;
            }
        }
    }
}