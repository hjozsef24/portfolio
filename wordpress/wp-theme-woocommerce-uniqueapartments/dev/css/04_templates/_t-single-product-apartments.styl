.product-template--apartments {
    margin-bottom: 24px;

    +maxwidth($xl-max) {
        margin-bottom: 56px;
    }

    .apartments-product-details {
        margin-top: 56px;

        +maxwidth($xl-max) {
            margin-top: 32px;
        }
    }

    .woocommerce-product-gallery__image {
        margin-top: 24px;

        img {
            width: 100%;
            height: 720px;
            object-fit: cover;
            object-position: center;

            +maxwidth($xl-max) {
                height: 360px;
            }

            +maxwidth($md-max) {
                height: 304px;
            }
        }
    }

    .product-description {
        margin-top: 32px;
        font-size: 18px;
        line-height: 24px;
        font-family: $paragraph-regular;

        +maxwidth($xl-max) {
            font-size: 16px;
            line-height: 24px;
        }
    }

    .price__wrapper {
        display: flex;
        align-items: center;

        +maxwidth($xl-max) {
            margin-top: 24px;
        }

        p {
            margin-right: 8px;
        }
    }

    .btn {
        width: 283px;
        padding: 16px 0;
        text-transform: uppercase;
        text-align: center;
        margin-top: 24px;

        +maxwidth($md-max) {
            width: 100%;
        }
    }

    .apartments__gallery {
        margin-top: 54px;

        .custom-mobile-spacing {
            +maxwidth($md-max) {
                --bs-gutter-x: 0;
            }
        }

        img {
            margin-bottom: 32px;
            object-fit: cover;
            object-position: center;

            +maxwidth($xl-max) {
                margin-bottom: 22px;
            }

            +maxwidth($md-max) {
                height: 208px;
            }
        }

        .custom-tablet-spacing {
            +between($md-max, $xl-max) {
                &:nth-child(even) {
                    padding-right: 12px !important;
                }

                &:nth-child(odd) {
                    padding-left: 12px !important;
                }
            }
        }
    }

    .attribute-icons {
        +maxwidth(1399px) {
            gap: 24px;
        }

        img {
            width: 32px;
            height: 32px;
        }

        &__wrapper {
            +maxwidth($md-max) {
                align-items: center;
            }
        }

        .attribute-details {
            display: block;

            +maxwidth($md-max) {
                display: flex;
                gap: 8px;
                width: 100%;
            }
        }
    }

    .apartments-gallery-slider {
        .slick-dots {
            display: flex;
            gap: 10px;
            list-style: none;
            position: absolute;
            bottom: -16px;
            justify-content: center;
            padding: 0;

            .slick-active {
                button {
                    opacity: 1;
                }
            }

            button {
                cursor: pointer;
                border: unset;
                background-color: $inactive-dots;
                width: 8px;
                height: 8px;
                border-radius: 8px;
                opacity: 0.5;
                color: transparent;
                font-size: 0;
                padding: 0;
            }
        }
    }
}