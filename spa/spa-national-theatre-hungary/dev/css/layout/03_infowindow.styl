.infowindow {
  position absolute
  height 100vh
  width 585px
  background-color white
  right 0
  z-index 2
  overflow-y scroll
  overflow-x hidden
  transform translateX(110%)
  transition 0.8s ease-in-out

  @media all and (max-width 1440px){
    width 500px

    @media all and (max-width 645px){
      width 65%
    }
  }

  &-active{
    transform translateX(0)
  }

  scrollbar-color #BC9137 #D3D3D3
  scrollbar-width thin

  &::-webkit-scrollbar {
    width 4px
    background-color $main_color
    opacity 0.1
  }

  &::-webkit-scrollbar-track {
    background-color lightgrey
  }

  &::-webkit-scrollbar-thumb {
    background-color $main_color
    border-radius 100px
    min-height 40px
    margin-bottom 150px
  }

  &-content {
    margin 0 45px

    @media all and (max-width 1440px){
      margin 0 25px
    }
  }

  &-city {
    font-weight 300
    color $main_color
    font-size 24px
    margin-top 45px

    @media all and (max-width 1440px){
      font-size 22px
    }

    @media all and (max-width 645px){
      font-size 20px
    }
  }

  &-title {
    font-size 40px
    font-weight 300
    color $main_color
    margin-top 25px

    @media all and (max-width 1440px){
      font-size 30px
    }

    @media all and (max-width 645px){
      font-size 25px
      margin-top 15px
    }
  }

  &-info {
    margin-top 15px
    font-size 16px
    font-weight 400
    color black

    @media all and (max-width 645px){
      font-size 14px
    }
  }

  &-text {
    margin 15px 0
    font-size 16px

    @media all and (max-width 645px){
      font-size 14px
    }
  }

  &-image{
    width 495px
    height 350px
    object-fit cover

    @media all and (max-width 1440px){
      width 450px
      height 315px
    }

    @media all and (max-width 645px){
      width 300px
      height auto
    }

    &-person{
      width 375px
      height auto
    }
  }

  &-overlay:before{
    content ''
    position absolute
    background-color #000
    opacity 0.5
    top 0
    bottom 0
    left 0
    right 0
    z-index 2
    height 100vh
  }
}

.x {
  position absolute
  float right
  top 36px
  right 36px
  cursor pointer
  fill #BC9137
  transition all .3s ease-in-out
}

.theatre{
  cursor pointer
}